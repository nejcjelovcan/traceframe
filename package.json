{
  "name": "traceframe",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf .turbo",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format:root": "prettier --cache --write \"*.{ts,tsx,json,md}\"",
    "format:check:root": "prettier --cache --check \"*.{ts,tsx,json,md}\"",
    "autofix": "pnpm lint:fix && pnpm format",
    "format": "turbo run format && pnpm format:root",
    "format:check": "turbo run format:check && pnpm format:check:root",
    "typecheck": "turbo run typecheck",
    "validate:tokens": "tsx scripts/validate-semantic-tokens.ts --report=detailed",
    "validate:token-definitions": "tsx scripts/validate-token-definitions.ts",
    "playroom": "cd packages/playroom/ && pnpm start",
    "storybook": "pnpm --filter ./packages/ui-library storybook"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@nejcjelovcan/eslint-plugin-traceframe": "workspace:^",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "glob": "^13.0.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  }
}
