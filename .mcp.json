{
  "mcpServers": {
    "github": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {}
    },
    "git": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@cyanheads/git-mcp-server"],
      "env": {
        "GIT_BASE_DIR": "${CLAUDE_PROJECT_DIR}"
      }
    },
    "linear-server": {
      "type": "http",
      "url": "https://mcp.linear.app/mcp"
    },
    "mcp-ui": {
      "type": "stdio",
      "command": "bash",
      "args": [
        "-c",
        "pnpm turbo run build --filter=@nejcjelovcan/traceframe-mcp-ui && node packages/mcp-ui/dist/main.js"
      ]
    },
    "mcp-dev": {
      "type": "stdio",
      "command": "bash",
      "args": [
        "-c",
        "pnpm turbo run build --filter=@nejcjelovcan/mcp-dev && node packages/mcp-dev/dist/main.js"
      ]
    }
  }
}
