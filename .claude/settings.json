{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"additionalContext\": \"IMPORTANT: Before using any git MCP tools, you MUST first call mcp__git__git_set_working_dir with path: '\"$CLAUDE_PROJECT_DIR\"' to set the working directory.\"}'"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(node:*)",
      "Bash(mkdir:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(ls:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(tr:*)",
      "Bash(wc:*)",
      "Bash(xargs:*)",
      "Bash(tree:*)",
      "Bash(gh api:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run watch:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:effect-ts.github.io)",
      "WebFetch(domain:knip.dev)",
      "WebFetch(domain:www.npmjs.com)",
      "WebFetch(domain:www.radix-ui.com)",
      "WebFetch(domain:developers.linear.app)",
      "WebFetch(domain:linear.app)",
      "mcp__github__add_issue_comment",
      "mcp__github__create_pull_request",
      "mcp__github__get_me",
      "mcp__github__issue_read",
      "mcp__github__issue_write",
      "mcp__github__list_commits",
      "mcp__github__list_pull_requests",
      "mcp__github__merge_pull_request",
      "mcp__github__pull_request_read",
      "mcp__github__pull_request_review_write",
      "mcp__github__search_code",
      "mcp__github__search_issues",
      "mcp__github__search_pull_requests",
      "mcp__github__update_pull_request",
      "mcp__git__git_add",
      "mcp__git__git_branch",
      "mcp__git__git_checkout",
      "mcp__git__git_commit",
      "mcp__git__git_diff",
      "mcp__git__git_fetch",
      "mcp__git__git_log",
      "mcp__git__git_pull",
      "mcp__git__git_push",
      "mcp__git__git_rebase",
      "mcp__git__git_set_working_dir",
      "mcp__git__git_merge",
      "mcp__git__git_remote",
      "mcp__git__git_show",
      "mcp__git__git_stash",
      "mcp__git__git_status",
      "mcp__linear-server__*",
      "mcp__mcp-ui__*",
      "mcp__mcp-dev__*"
    ]
  }
}
